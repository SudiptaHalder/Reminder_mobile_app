rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isUser(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }
    
    function getUserData(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data;
    }
    
    function getUserRoomId(uid) {
      let userData = getUserData(uid);
      return userData != null ? userData.roomId : null;
    }
    
    function isRoomMember(roomId) {
      return isAuthenticated() && 
        roomId != null && 
        getUserRoomId(request.auth.uid) == roomId &&
        roomId in get(/databases/$(database)/documents/rooms/$(roomId)).data.members;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isUser(userId);
      
      // Ensure users can't join multiple rooms
      allow update: if isUser(userId) && 
        (!('roomId' in request.resource.data) || 
         request.resource.data.roomId == null ||
         !exists(/databases/$(database)/documents/rooms/$(request.resource.data.roomId)) ||
         request.auth.uid in get(/databases/$(database)/documents/rooms/$(request.resource.data.roomId)).data.members);
    }

    // Rooms collection
    match /rooms/{roomId} {
      allow read: if isAuthenticated() && 
        request.auth.uid in resource.data.members;
      
      allow create: if isAuthenticated() && 
        request.resource.data.createdBy == request.auth.uid &&
        request.resource.data.members[0] == request.auth.uid &&
        request.resource.data.members.size() == 1;
      
      allow update: if isAuthenticated() && 
        request.auth.uid in resource.data.members &&
        (request.resource.data.members == resource.data.members ||  // No member changes
         (request.resource.data.members.size() > resource.data.members.size() &&  // Adding member
          request.resource.data.members[resource.data.members.size()] == request.auth.uid)); // New member is current user
      
      allow delete: if isAuthenticated() && 
        request.auth.uid == resource.data.createdBy &&
        resource.data.members.size() == 1;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
